@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "BP Category Calculator - Szabolcs VARGA";
}


<h4>BP Category Calculator- Szabolcs VARGA</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BP.Systolic" class="control-label"></label>
                <input asp-for="BP.Systolic" class="form-control"/>
                <span asp-validation-for="BP.Systolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BP.Diastolic" class="control-label"></label>
                <input asp-for="BP.Diastolic" class="form-control" />
                <span asp-validation-for="BP.Diastolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
            @if (ViewData.ModelState.IsValid)
            {
                <div class="form-group">
                    @Html.DisplayFor(model => model.BP.Category, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            }
            <br />
            <br />
            <div class="form-group">
                <label asp-for="BP.PulsePressure" class="control-label"></label>
            </div>
            @if (ViewData.ModelState.IsValid)
            {
                <div class="form-group">
                    @Html.DisplayFor(model => model.BP.PulsePressure, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            }
            <div class="form-group">
                <label>A normal resting pulse pressure is around 40 mm Hg. 
                    A pulse pressure that's higher than 40 mm Hg is generally considered unhealthy. 
                    A pulse pressure that's 50 mm Hg or higher can increase the risk of heart disease, stroke, heart rhythm disorders, and eye and kidney damage.</label>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
